<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/practice_words"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/spinner_words"
            android:prompt="@string/choose_a_word">
        </TextView>

        <Spinner
            android:id="@+id/practice_ip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:entries="@array/server_ips"
            android:prompt="@string/server_ip_address">
        </Spinner>

        <VideoView
            android:id="@+id/practice_video_learn"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginTop="10dp" />

        <LinearLayout
            android:id="@+id/practice_after_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/practice_new_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Word" />

            <Button
                android:id="@+id/practice_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Record" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>